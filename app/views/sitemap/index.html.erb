<h1>Sitemap</h1>

<ul>
  <li>
    <%= link_to "Slides", slides_path, :title => 'Slides' %> (<%= link_to 'xml', "#{slides_path}.xml" %>)
    <ul>
      <% for slide in @slides -%>
        <li><%= link_to h(slide.title), slide, :title => h(slide.title) %> (<%= link_to 'xml', "#{slide_path(slide)}.xml" %>)</li>
      <% end -%>
    </ul>
  </li>
  <li>
    <%= link_to "Departments", departments_path, :title => 'Departments' %>
    <ul>
      <% for department in @departments -%>
        <li><%= link_to h(department.title), department, :title => h(department.title) %> (<%= link_to 'xml', "#{department_path(department)}.xml" %>)</li>
      <% end -%>
    </ul>
  </li>
  <li>
    <%= link_to "Main XML", "main.xml", :title => 'Main XML' %>
  </li>
  <li>
    <%= link_to "Categories", categories_path, :title => 'Categories' %> (<%= link_to 'xml', "#{categories_path}.xml" %>)
    <ul>
      <% for category in @categories -%>
        <li><%= link_to h(category.title), category, :title => h(category.title) %></li>
      <% end -%>
    </ul>
  </li>
  <li>
    <%= link_to "Industries", industries_path, :title => 'Industries' %> (<%= link_to 'xml', "#{industries_path}.xml" %>)
    <ul>
      <% for industry in @industries -%>
        <li><%= link_to h(industry.title), industry, :title => h(industry.title) %></li>
      <% end -%>
    </ul>
  </li>
  <li>
    <%= link_to "Projects", projects_path, :title => 'Projects' %>
    <ul>
      <% for project in @projects -%>
        <li><%= link_to "#{h(project.client)} #{h(project.title)}", project, :title => "#{h(project.client)} #{h(project.title)}" %> (<%= link_to 'xml', "#{project_path(project)}.xml" %>)</li>
      <% end -%>
    </ul>
  </li>
  <li>
    <%= link_to "Contact", locations_path, :title => 'Contact' %> (<%= link_to 'xml', "#{locations_path}.xml" %>)
  </li>
  <li>
    <%= link_to "Sections", sections_path, :title => 'Sections' %>
    <ul>
      <% for section in @sections -%>
        <li>
          <%= link_to h(section.title), section, :title => h(section.title) %> (<%= link_to 'xml', "#{section_path(section)}.xml" %>)
          <ul>
            <% for page in section.pages -%>
              <li><%= link_to h(page.title), section_page_path(section, page), :title => h(page.title) %></li>
            <% end -%>
          </ul>
        </li>
      <% end -%>
    </ul>
  </li>
</ul>