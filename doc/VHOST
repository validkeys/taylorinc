# domain: taylorinc.globacore.com
# public: /var/www/taylorinc/current/public

<VirtualHost *:80>

  # Admin email, Server Name (domain name) and any aliases
  ServerAdmin webmaster@globacore.com
  ServerName  globacore.com
  ServerAlias taylorinc.globacore.com


  # Index file and Document Root (where the public files are located)
  DirectoryIndex index.html
  DocumentRoot /var/www/taylorinc/current/public

  # Custom log file locations
  LogLevel warn
  ErrorLog  /var/www/taylorinc/current/log/error.log
  CustomLog /var/www/taylorinc/current/log/access.log combined

</VirtualHost>