<h1>Sitemap</h1>

<ul>
  <li>
    <%= link_to "Categories", categories_path, :title => 'Categories' %>
    <ul>
      <% for category in @categories -%>
        <li><%= link_to h(category.title), category, :title => h(category.title) %></li>
      <% end -%>
    </ul>
  </li>
  <li>
    <%= link_to "Clients", clients_path, :title => 'Clients' %>
