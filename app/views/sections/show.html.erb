<div id="content">
  <p>
    <%= link_to(image_tag(@page.image.url(:small), :class => 'inline'), @page.image.url(:"640"), :class => 'thumb', :title => @page.title) if @page.image? %>
    <%= RedCloth.new(@page.description).to_html %>
  </p>
</div>
<div id="resources">
  <h1><%=h @section.title %></h1>
  <ul>
  <% for page in @section.pages -%>
    <li><%= link_to page.title, section_page_path(@section, page) %></li>
  <% end -%>
  </ul>
</div>
